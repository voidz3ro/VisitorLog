<UserControl
    x:Class="VisitorLog.VisitorTile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VisitorLog"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="60"
    d:DesignWidth="800">

    <Grid>
        <TextBlock x:Name="txtName" HorizontalAlignment="Left" Margin="10,7,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="519" FontSize="36" x:FieldModifier="public"/>
        <TextBlock x:Name="txtCompany" HorizontalAlignment="Left" Margin="419,12,0,0" TextWrapping="Wrap" Text="Company" VerticalAlignment="Top" Width="266" FontSize="20" x:FieldModifier="public"/>
        <TextBlock x:Name="txtTimeIn" Margin="690,10,-156,0" TextWrapping="Wrap" Text="Time" VerticalAlignment="Top" FontSize="20" x:FieldModifier="public"/>
    </Grid>
</UserControl>
