<UserControl
    x:Class="VisitorLog.ScheduledVisitTile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VisitorLog"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="80"
    d:DesignWidth="800">

    <Grid>
        <TextBlock x:FieldModifier="public" x:Name="txtName" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" FontSize="24" Height="41" Width="285"/>
        <TextBlock x:FieldModifier="public" x:Name="txtCompany" HorizontalAlignment="Left" Margin="300,10,0,0" TextWrapping="Wrap" Text="Company" VerticalAlignment="Top" FontSize="24" Height="41" Width="209"/>
        <TextBlock x:FieldModifier="public" x:Name="txtDate" HorizontalAlignment="Left" Margin="524,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24" Height="41" Width="223" Text="Date"/>
        

    </Grid>
</UserControl>
